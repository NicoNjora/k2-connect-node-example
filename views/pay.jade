extends layout

block content

    br

    p !{message}
    .container
        .title.h3 Initialise a pay request
        br
        form(action="/pay", method="post")
            .form-group.row
                label.col-sm-2.col-form-label Destination
                .col-sm-7
                    input.form-control(name="destination", type='text', placeholder='Enter Destination' required)
                    small.form-text.text-muted
                        | Enter Destination
            .form-group.row
                label.col-sm-2.col-form-label Amount
                .col-sm-7
                    input.form-control(name="amount", type='integer', placeholder='Enter Amount' required)
                    small.form-text.text-muted
                        | Enter Amount
            
            br
            .form-group.row
                .col-sm-7
                    button.btn.btn-success(type='submit') Send Pay